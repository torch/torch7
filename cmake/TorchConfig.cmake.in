# Define Torch basic subpaths
SET(Torch_INSTALL_BIN_SUBDIR "@Torch_INSTALL_BIN_SUBDIR@")
SET(Torch_INSTALL_MAN_SUBDIR "@Torch_INSTALL_MAN_SUBDIR@")
SET(Torch_INSTALL_LIB_SUBDIR "@Torch_INSTALL_LIB_SUBDIR@")
SET(Torch_INSTALL_SHARE_SUBDIR "@Torch_INSTALL_SHARE_SUBDIR@")
SET(Torch_INSTALL_INCLUDE_SUBDIR "@Torch_INSTALL_INCLUDE_SUBDIR@")
SET(Torch_INSTALL_DOK_SUBDIR "@Torch_INSTALL_DOK_SUBDIR@")
SET(Torch_INSTALL_DOKMEDIA_SUBDIR "@Torch_INSTALL_DOKMEDIA_SUBDIR@")
SET(Torch_INSTALL_HTML_SUBDIR "@Torch_INSTALL_HTML_SUBDIR@")
SET(Torch_INSTALL_CMAKE_SUBDIR "@Torch_INSTALL_CMAKE_SUBDIR@")
SET(Torch_INSTALL_LUA_PATH_SUBDIR "@Torch_INSTALL_LUA_PATH_SUBDIR_PKG@")
SET(Torch_INSTALL_LUA_PKG_PATH_SUBDIR "@Torch_INSTALL_LUA_PKG_PATH_SUBDIR@")
SET(Torch_INSTALL_LUA_CPATH_SUBDIR "@Torch_INSTALL_LUA_CPATH_SUBDIR_PKG@")
SET(Torch_INSTALL_CMAKE_RIDBUS "@Torch_INSTALL_CMAKE_RIDBUS@")

# Additional variables we need to setup
SET(WITH_LUA_JIT "@WITH_LUA_JIT@")

# Determine Torch install prefix
GET_FILENAME_COMPONENT(_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
SET(_DIR "${_DIR}/${Torch_INSTALL_CMAKE_RIDBUS}/.")
GET_FILENAME_COMPONENT(_DIR "${_DIR}" ABSOLUTE)

SET(CMAKE_INSTALL_PREFIX "${_DIR}" CACHE PATH "Torch7 Install Prefix -- do not change")
SET(Torch_INSTALL_PREFIX "${_DIR}")

SET(CMAKE_MODULE_PATH "${Torch_INSTALL_PREFIX}/${Torch_INSTALL_CMAKE_SUBDIR}" "${CMAKE_MODULE_PATH}")

INCLUDE(TorchPathsInit)
INCLUDE(TorchCFlags)
INCLUDE(TorchPackage)
INCLUDE(TorchWrap)
INCLUDE(TorchDOK)
INCLUDE(TorchLua2exe)

# Define Torch basic targets
INCLUDE(TorchExports)

MESSAGE(STATUS "Found Torch7 in ${Torch_INSTALL_PREFIX}")
